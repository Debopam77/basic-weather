<head>
    <title>Weather</title>
    <link rel='icon' href='./img/weatherIcon.ico'>
    <link rel='stylesheet' href='./css/styles.css'>
</head>

<body>

    {{>header}}
    <div class='main-content card'>
        <p>
            Get your weather information here...
        </p>
        <form>
            <input class='shadowCard'>
            <button class="SearchButton shadowCard" placeholder='location'>Search</button>
        </form>
        <div>
            <img class='weathericon' id='weatherImg'>
            <div class='container'>
                <div id='temperature'></div>
                <div class='container' id='output'></div>
            </div>
            
            <div class='container' id='error'></div>
        </div>
    </div>
    {{>footer}}
    <script src="/js/app.js"></script>
</body>